<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <welcome-file-list>
        <welcome-file>reader</welcome-file>
    </welcome-file-list>
    <filter>
        <filter-name>setParam</filter-name>
        <filter-class>Controller.Filter.setParam</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>setParam</filter-name>
        <servlet-name>reader</servlet-name>
        <servlet-name>directory</servlet-name>
        <servlet-name>newchapter</servlet-name>
        <servlet-name>newmanga</servlet-name>
        <servlet-name>series</servlet-name>
        <servlet-name>read</servlet-name>
    </filter-mapping>
    <servlet>
        <servlet-name>reader</servlet-name>
        <servlet-class>Controller.Servlet.reader</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>directory</servlet-name>
        <servlet-class>Controller.Servlet.directory</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>newchapter</servlet-name>
        <servlet-class>Controller.Servlet.newchapter</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>newmanga</servlet-name>
        <servlet-class>Controller.Servlet.newmanga</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>series</servlet-name>
        <servlet-class>Controller.Servlet.series</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>read</servlet-name>
        <servlet-class>Controller.Servlet.read</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>reader</servlet-name>
        <url-pattern>/reader</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>directory</servlet-name>
        <url-pattern>/directory</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>newchapter</servlet-name>
        <url-pattern>/newchapter</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>newmanga</servlet-name>
        <url-pattern>/newmanga</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>series</servlet-name>
        <url-pattern>/series/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>read</servlet-name>
        <url-pattern>/read/*</url-pattern>
    </servlet-mapping>
    <context-param>
        <description>base link of website</description>
        <param-name>siteurl</param-name>
        <param-value>http://truyen.skyrule.net/</param-value>
    </context-param>
    <context-param>
        <description>base link of manga link</description>
        <param-name>imageurl</param-name>
        <param-value>http://truyen.vnsharing.vn/upload/images/</param-value>
    </context-param>
    <context-param>
        <description>base link of image link</description>
        <param-name>imgurl</param-name>
        <param-value>http://truyen.vnsharing.vn/img/truyen/</param-value>
    </context-param>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <ejb-local-ref>
        <ejb-ref-name>BookmarksFacade</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <local>Session.BookmarksFacadeLocal</local>
        <ejb-link>Core-ejb.jar#BookmarksFacade</ejb-link>
    </ejb-local-ref>
</web-app>
